{
  "name": "@volst/graphql-form-helpers",
  "version": "0.2.1",
  "description": "Makes it easy to work with nested data in forms with GraphQL.",
  "author": "kees@volst.nl",
  "repository": "Volst/graphql-form-helpers",
  "license": "ISC",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=8.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "graphql",
    "forms",
    "prisma"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tslint -p .",
    "prepublishOnly": "npm run -s build",
    "precommit": "pretty-quick --staged",
    "test": "jest --watch",
    "test-coverage": "jest --coverage",
    "ci": "npm run -s lint && npm run -s build && npm run -s size && npm run -s test-coverage && codecov",
    "size": "size-limit"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@volst/tslint-config": "^0.2.1",
    "codecov": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "size-limit": "^0.17.0",
    "ts-jest": "^22.4.5",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "deepmerge": "^2.1.0",
    "is-pojo": "^1.0.2"
  },
  "peerDependencies": {},
  "jest": {
    "roots": [
      "./src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    }
  },
  "size-limit": [
    {
      "limit": "2 KB",
      "path": "dist/index.js"
    }
  ]
}
