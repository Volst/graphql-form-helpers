{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "lib": ["esnext"],
    "strict": true,
    // Disabled because this doesn't work correctly with "declaration": true
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
